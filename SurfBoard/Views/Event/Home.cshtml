                                + "<small class='card-title d-xl-inline-flex' style='font-size:medium; color:lightgrey'>&nbsp; # " + eventlist.Event_Code + "</small>"
                                + "</div>"
                                + "<p class='card-text'>" + startdate + " " + "To" + " " + enddate + "</p>"
