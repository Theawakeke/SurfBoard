    @*-------- add Event ------*@
    <script>
        function validateCode(Event_Code) {
            var re = /[0-9a-zA-Z]{4}$/;
            return re.test(Event_Code);
        }

        function validate() {

            var Event_Code = $("#Event_Code").val();
            $("#result").text("");

            if (validateCode(Event_Code)) {
                Crea();
            } else {

                $("#result").text("Event Code is Not Valid. Need 4 letters");
                $("#result").css("color", "red");
            }
            return false;
        };
    </script>

    <script>
        function validateEdit(Code) {
            var re = /[0-9a-zA-Z]{4}$/;
            return re.test(Code);
        }

        function validateEditBtn() {
            var Code = $("#Code").val();
            if (Code == "") {
                Code = $("#SubCode").val();
            }

            $("#resultEdit").text("");

            if (validateCode(Code)) {
                Edit();
            } else {

                $("#resultEdit").text("Event Code is Not Valid. Need 4 letters");
                $("#resultEdit").css("color", "red");
            }
            return false;
        };
    </script>
    <script>


            function Crea() {
                var E_Name = $("#Event_Name").val();
                var E_Code = $("#Event_Code").val();
                var S_Date = $("#Start_Date").val();
                var E_Date = $("#End_Date").val();

                if (S_Date == "") {
                    S_Date = "01/01/01"
                }
                if (E_Date == "") {
                    E_Date = "01/01/01"
                }
               var EventPassword = $("#EventPassword").val();
